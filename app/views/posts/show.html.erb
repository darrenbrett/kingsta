<div id="post-show-content" class="skinny-wrapper">
			<header>
				<p class="date"><%= @post.created_at.strftime('%A, %b, %d')%></p>
				<h1><%= @post.title %></h1>
				<hr>
			</header>
			
			<div id="content"><%= markdown @post.content %></div>
		
		<hr>
		
		<div id="share-box">
			<p>Share the DO List</p>
			<a href="#"><i class="fa fa-twitter"></i></a>
			<a href="#"><i class="fa fa-facebook"></i></a>
			<a href="#"><i class="fa fa-google-plus"></i></a>
		</div>
		
		<hr>
		
		<%= render 'disqus' %>
		
		</div>
		
		<%= link_to "Edit", edit_post_path %>
		<%= link_to "Delete", method: :destroy, data: { confirm: "Are you sure?" }%>
